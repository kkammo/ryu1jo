<%= form_for(@material) do |f| %>
  <% if @material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@material.errors.count, "error") %> prohibited this material from being saved:</h2>

      <ul>
      <% @material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.label '제목' %><br>
    <%= f.text_field :subject %>
  </div>
  <br>
  <div class="actions">
    <%= f.label '분야' %><br>
    <div class="radio" >
      <label style="padding-right: 20px">
        <input type="radio" name="material[field]" id="material_field" value="web" checked>
          web
      </label>
          
      <label style="padding-right: 20px">
        <input type="radio" name="material[field]" id="material_field" value="ios" >
          ios
      </label>

      <label style="padding-right: 20px">
        <input type="radio" name="material[field]" id="material_field" value="android" >
          android
      </label>

      <label style="padding-right: 20px">
        <input type="radio" name="material[field]" id="material_field" value="windows" >
          windows
      </label>

      <label style="padding-right: 20px">
        <input type="radio" name="material[field]" id="material_field" value="embeded" >
          embeded
      </label>
    </div>
  </div>

  <div class="actions">
    <%= f.label '참여도' %><br>
    <%= f.number_field :prate %>
  </div>

  <div class="actions">
    <%= f.label '내용' %><br>
    <%= f.text_field :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
