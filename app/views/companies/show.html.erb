<body>
<p id="notice"><%= notice %></p>

<h2>
  <%= @company.name %>
  <% if current_developer.admin %>
    <%= link_to 'New Department', new_company_department_path(@company), :class => 'btn btn-primary pull-right' %>
  <% end %>
</h2>

<div>
  <h3> 회차 별 평가 내역 </h3>

  <table class="table table-condensed">
    <thead>
      <tr>
        <th >
          회차
        </th>
        <th colspan="6">
          평점
        </th>
      </tr>
    </thead>

    <tbody>
      <% @evaluations.each do |evaluation| %>
        <tr>
          <td>
            <%= evaluation.id %>
          </td>
          <td>
            <%= @company.get_avg(evaluation.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th colspan="3">
        부서
      </th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td>
          <%= department.dname %> 
          <%= link_to 'show', company_department_path(@company, department) %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>


<br>
<br>
<div>
  <%= link_to 'Back', companies_path, :class => 'btn btn-success pull-right' %>
</div>
</body>
