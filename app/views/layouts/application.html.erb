<!DOCTYPE html>
<html>
<head>
  <title>Evalsys</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <nav class="navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "전문가관리시스템", root_path %>
  </div>
  
  <div class="collapse navbar-collapse navbar-ex1-collapse">

    <% if developer_signed_in? && current_developer.admin %>
      <ul class="nav navbar-nav navbar-left">
        <li>
          <%= link_to '평가', admin_evaluations_path %>
        </li>
        <li>
          <%= link_to '자료', admin_materials_path %>
        </li>
        <li>
          <%= link_to '회사', companies_path %>
        </li>
        <li>
          <%= link_to '개발자', admin_developers_path %>
        </li>
      </ul>
    <% else %>
      <ul class="nav navbar-nav navbar-left">
    	  <li>
          <%= link_to '평가', evaluations_path %>
        </li>
        <li>
          <%= link_to '자료', materials_path %>
        </li>
        <li>
          <%= link_to '회사', companies_path %>
        </li>
      </ul>
    <% end %>

    <ul class="nav navbar-nav navbar-right">
      <% if developer_signed_in? %>
        <li>
          <%= link_to current_developer.name, edit_developer_registration_path(current_developer) %>
        </li>
        <li style ='padding-right: 14px'> 
          <%= link_to "Sign out", destroy_developer_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign up", new_developer_registration_path %>
        </li>
        <li style ='padding-right: 14px'>
          <%= link_to "Sign in", new_developer_session_path %>
        </li>
      <% end %>
    </ul>
    </div><!-- /.navbar-collapse -->
  </nav>




</head>
<body>

<%= yield %>

</body>
</html>
